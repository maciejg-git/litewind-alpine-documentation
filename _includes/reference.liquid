<div class="bg-neutral-50 mt-6 px-4 py-2 rounded-md dark:bg-[#1e1e1e]">
  {%- for prop in props -%}
    <div class="py-2">
      <div class="flex">
        <code class="text-base ml-4">
          {{ prop.name }}
        </code>
        <div class="ml-auto flex">
          {%- if prop.default -%}
          <code class="text-red-600 dark:text-red-500 font-semibold mr-4">
            {{ prop.default }}
          </code>
          {%- endif -%}
          {%- for type in prop.type -%}
          <code class="bg-red-300 rounded-md px-2 mr-1 self-center dark:bg-red-500 dark:text-neutral-100">
            {{ type }}
          </code>
          {%- endfor -%}
        </div>
      </div>
<div class="ml-[200px] my-1">

{{ prop.description }}

</div>
    </div>
    {% if forloop.last == false %}
      <hr class="border-neutral-200 dark:border-neutral-700">
    {% endif %}
  {%- endfor -%}
</div>
