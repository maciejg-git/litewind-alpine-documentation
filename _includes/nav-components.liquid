<div class="mb-6 font-semibold dark:text-text-300">Introduction</div>

<ul>
{% assign components = collections.introduction | sort: "data.name" %}
{% for component in components %}
  <li class="my-2">
    <a href="{{ component.url }}" class="{% if component.url == page.url %}text-violet-500 font-semibold{% endif %}">{{ component.data.name }}</a>
  </li>
{% endfor%}
</ul>

