<div>
  <div class="example">
    <div class="p-2 pl-6 pr-2 font-semibold text-text-600 dark:text-text-300">
      <div class="flex justify-between">
        Example
        <div class="flex gap-x-2">
          {%- assign file = tabs[0].file | split: '/' -%}
          <a
            x-data
            href="https://github.com/maciejg-git/alpine-components-documentation/tree/main/_includes/examples/{{ file[1] }}"
            x-tooltip.delay:500.offset-y:5="Example on Github"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="h-6 w-6" viewBox="0 0 16 16">
              <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"/>
            </svg>
          </a>
          <button
            x-data="{ copy: false }"
            @click="
              () => {
                let text = document.querySelector('#{{ tabs[0].name | append: tabs[0].label }}').textContent
                navigator.clipboard.writeText(text)
                copy = true
                setTimeout(() => copy = false, 1500)
              }
            "
            x-tooltip.delay:500.offset-y:5="Copy example source"
          >
            <svg
              x-show="!copy"
              xmlns="http://www.w3.org/2000/svg"
              fill="currentColor"
              viewBox="0 0 24 24"
              class="h-6 w-6"
            >
              <path d="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z" />
            </svg>
            <svg
              x-show="copy"
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              viewBox="0 0 16 16"
              class="h-6 w-6"
            >
              <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425z"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
    <div class="overflow-x-hidden p-6{% if centerFlexRow %} flex justify-center{% elsif centerFlexCol %} flex flex-col items-center{% endif %}">
      {% render example %}
    </div>
  </div>
  <div class="mt-4">
    {% render 'code.liquid', tabs: tabs, collapse: collapse %}
  </div>
</div>
